# BeamFlow Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
ADMIN_API_KEY=your-admin-api-key-for-metrics-access

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=beamflow
DB_USER=beamflow_user
DB_PASSWORD=your-database-password
DB_DIALECT=mysql

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@yourdomain.com
SMTP_SECURE=false

# GitHub OAuth (for authentication)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:3000/auth/github/callback
REQUIRE_OAUTH=true

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/beamflow.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Performance Configuration
CACHE_TTL=300000
CACHE_MAX_SIZE=1000
CACHE_MAX_MEMORY=104857600
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAX_AUTH_ATTEMPTS=5

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30000

# SSL/TLS Configuration (for production)
SSL_KEY_PATH=
SSL_CERT_PATH=
SSL_CA_PATH=

# External API Keys
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_SOCIAL_LOGIN=true
ENABLE_API_RATE_LIMITING=true
ENABLE_CACHE=true
ENABLE_COMPRESSION=true

# Development Configuration
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_MODE=true
ENABLE_MOCK_DATA=false
ENABLE_TEST_MODE=false

# Production Configuration
ENABLE_HTTPS_REDIRECT=false
ENABLE_HSTS=false
ENABLE_CSP_REPORTING=false
CSP_REPORT_URI=

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
PUSH_PUBLIC_KEY=
PUSH_PRIVATE_KEY=

# Analytics Configuration
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90
ENABLE_USER_TRACKING=true
ENABLE_ERROR_TRACKING=true
