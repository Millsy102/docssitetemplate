# BeamFlow Documentation Site Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
PORT=3000
HOST=localhost

# =============================================================================
# SITE CONFIGURATION
# =============================================================================
SITE_TITLE=BeamFlow Documentation
SITE_NAME=BeamFlow Documentation
SITE_DESCRIPTION=Comprehensive documentation for the BeamFlow Unreal Engine plugin
SITE_AUTHOR=BeamFlow Team
SITE_URL=https://yourusername.github.io/your-repo-name

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Configuration
DATABASE_URL=mongodb://localhost:27017/beamflow
MONGODB_URI=mongodb://localhost:27017/beamflow

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_URI=redis://localhost:6379

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_ROUNDS=12

# Admin Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password
ADMIN_API_KEY=your-admin-api-key

# Session Configuration
SESSION_TIMEOUT=3600000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# GITHUB INTEGRATION
# =============================================================================
GH_CLIENT_ID=your-github-oauth-client-id
GH_CLIENT_SECRET=your-github-oauth-client-secret
GH_TOKEN=your-github-personal-access-token
REPOSITORY_NAME=your-repo-name
GH_PAGES_BRANCH=gh-pages

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@beamflow.com
FROM_EMAIL=noreply@beamflow.com

# Email Provider (smtp, sendgrid, mailgun, aws)
EMAIL_PROVIDER=smtp

# Client URL for email links
CLIENT_URL=http://localhost:3000

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# Rate Limiting Settings
RATE_LIMIT_WHITELIST=127.0.0.1,::1
RATE_LIMIT_BLACKLIST=
RATE_LIMIT_LOGGING=true
RATE_LIMIT_LOG_LEVEL=warn

# Legacy Rate Limiting (deprecated - use new rate limiting system)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_MAX_SIZE=1000
CACHE_TTL=300000

# =============================================================================
# PERFORMANCE & MONITORING
# =============================================================================
# Performance Monitoring
SLOW_REQUEST_THRESHOLD=1000
MONITORING_INTERVAL=30000

# Request Tracking
DEBUG_MODE=false
MAX_REQUEST_LOG_SIZE=10000
REQUEST_LOG_RETENTION_MS=86400000

# Metrics & Health Checks
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FILE=./logs/beamflow.log

# =============================================================================
# AI INTEGRATION
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000

# =============================================================================
# UNREAL ENGINE INTEGRATION
# =============================================================================
UNREAL_ENGINE_PATH=C:/Program Files/Epic Games/UE_5.3/Engine
UNREAL_PROJECT_PATH=C:/Users/YourUsername/Documents/Unreal Projects/YourProject
UNREAL_PYTHON_PATH=C:/Program Files/Epic Games/UE_5.3/Engine/Binaries/ThirdParty/Python3/Win64/python.exe
UNREAL_REMOTE_CONTROL_PORT=30010

# =============================================================================
# FTP SERVER CONFIGURATION
# =============================================================================
FTP_ENABLED=false
FTP_PORT=21
FTP_PASV_URL=localhost
FTP_TLS_ENABLED=false
FTP_TLS_KEY_PATH=
FTP_TLS_CERT_PATH=

# =============================================================================
# SSH SERVER CONFIGURATION
# =============================================================================
SSH_ENABLED=false
SSH_PORT=22
SSH_HOST_KEY_PATH=./keys/host_key

# =============================================================================
# PC LINK SERVICE
# =============================================================================
BEAMFLOW_PC_LINK_API_KEY=your-pc-link-api-key

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================
GA_MEASUREMENT_ID=your-google-analytics-measurement-id

# =============================================================================
# DEPLOYMENT & BUILD
# =============================================================================
BUILD_OUTPUT_DIR=dist

# =============================================================================
# TESTING
# =============================================================================
TEST_BASE_URL=http://localhost:3000
TEST_DELAY=100

# =============================================================================
# VERCEL DEPLOYMENT
# =============================================================================
VERCEL=0

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Change all default passwords and secrets in production
# 2. Use strong, unique passwords for admin accounts
# 3. Keep API keys secure and never commit them to version control
# 4. Use environment-specific .env files (.env.development, .env.production)
# 5. Regularly rotate secrets and API keys
# 6. Never commit .env files to version control
